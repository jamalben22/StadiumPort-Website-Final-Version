{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install --legacy-peer-deps",
  "devCommand": "npm run dev",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "redirects": [
    { "source": "/world-cup-2026-cities", "destination": "/world-cup-2026-host-cities", "statusCode": 308 },
    { "source": "/world-cup-2026-cities/:cityId", "destination": "/world-cup-2026-host-cities/:cityId", "statusCode": 308 },
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "www.stadiumport.com" }],
      "destination": "https://stadiumport.com/$1",
      "statusCode": 308
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
